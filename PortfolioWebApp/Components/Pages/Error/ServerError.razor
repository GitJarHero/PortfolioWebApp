@page "/error/500"
@page "/Error/ServerError"
@using Microsoft.AspNetCore.Authorization
@attribute [AllowAnonymous]

<div class="container text-center mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-10">
            <div class="card shadow-lg border-0">
                <div class="card-body py-5">
                    <h1 class="display-3 text-warning">500</h1>
                    <h3 class="text-dark">Interner Serverfehler</h3>
                    <p class="text-muted">
                        Es ist ein unerwarteter Fehler aufgetreten. Bitte versuchen Sie es später erneut. Falls das Problem weiterhin besteht, informieren Sie bitte den Administrator.
                    </p>
                    <a href="/Home" class="btn btn-primary btn-lg mt-4">
                        <i class="bi bi-house-door"></i> Zurück zur Startseite
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>